@model Instrumusicals.Models.Instrument

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center text-center m-3" >
    <div class="w-50">
        <h3>Edit <a class="text-light" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h3>
        <a asp-action="Index" class="text-light">All Instruments</a>
        <br />
        <a asp-action="Index" asp-controller="Home" class="text-primary">Hompage</a> | 
        <a asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">Delete</a>

        <hr />
        @if (Model.Image != null)
        {
            string img = Convert.ToBase64String(Model.Image);
            <img src="data:image/png;base64,@img" style="width:250px; height:250px; border-radius:100px" />
        }
        <hr />
    </div>
</div>


<div class="row justify-content-center text-center">
    <div class="w-50">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row justify-content-center">
                <input asp-for="Name" class="form-control m-2 text-center bg-dark text-light w-50" placeholder="Name"  style="border-radius:100px;"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <input asp-for="Brand" class="form-control m-2 text-center bg-dark text-light w-50" placeholder="Brand" style="border-radius:100px;"/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label class="control-label">Update Category:</label>
                <select asp-for="CategoryId" class="form-control m-2 text-center bg-dark text-light w-50" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label class="control-label">Choose Another Image</label>
                <input asp-for="ImageFile" class="form-control m-2 text-center bg-dark text-light w-50" accept="image/*" style="border-radius:100px;" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <input asp-for="Description" class="form-control m-2 text-center bg-dark text-light w-50" placeholder="Description" style="border-radius:100px;"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control m-2 text-center bg-dark text-light w-50" placeholder="Quantity" style="border-radius:100px;"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label class="control-label">Sold Items</label>
                <input asp-for="Sold" class="form-control m-2 text-center bg-dark text-light w-50" style="border-radius:100px;" />
                <span asp-validation-for="Sold" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control m-2 text-center bg-dark text-light w-50" style="border-radius:100px;" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-center m-3">
                <input type="submit" value="Update" class="btn text-success border border-success" style="border-radius:100px;" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
