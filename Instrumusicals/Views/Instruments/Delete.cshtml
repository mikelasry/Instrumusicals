@model Instrumusicals.Models.Instrument

@{
    ViewData["Title"] = "Delete";
}
<div class="row text-center justify-content-center">
    <div class="w-50">
        <h2>Delete @Model.Name</h2>
        <h5>Are you sure you want to delete this Instrument?</h5>
        <a asp-action="Index" class="text-light">All Instruments</a>
        <br />
        <a asp-action="Index" asp-controller="Home" class="text-primary">Hompage</a> |
        <a asp-action="Edit" asp-route-id="@Model.Id" class="text-warning">Edit</a>
        <hr />
        @if (Model.Image != null)
        {
            string img = Convert.ToBase64String(Model.Image);
            <img src="data:image/png;base64,@img" style="width:250px; height:250px; border-radius:100px" />
        }
        <hr />
    </div>
</div>
<div class="row text-center justify-content-center">
    <div class="w-75">
        <table class="table text-light">
            <thead>
                <tr>
                    <th class="text-info">Name</th>
                    <th class="text-info">Brand</th>
                    <th class="text-info">Category</th>
                    <th class="text-info">Description</th>
                    <th class="text-info">Quantity</th>
                    <th class="text-info">Sold</th>
                    <th class="text-info">Price</th>
                    <th class="text-info">Reviews</th>
                    <th class="text-info">Orders</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Brand</td>
                    <td>@Model.Category.Name</td>
                    <td>@Model.Description</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.Sold</td>
                    <td>@Model.Price$</td>
                    <td>@Model.Reviews.Count()</td>
                    <td>@Model.Orders.Count()</td>
                </tr>
            </tbody>
        </table>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn text-danger border border-danger w-25 m-3" style="border-radius:100px;" />
        </form>
    </div>
</div>
