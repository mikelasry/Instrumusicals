@model IEnumerable<Instrumusicals.Models.Instrument>

@{
ViewData["Title"] = "Instuments";
}

<div style="display:flex; justify-content:space-around; ">
    
    Search by: &nbsp;
    <input id="nameInput" name="Name" placeholder="Name" class="m-1"/>
    <button id="btnSearch" class="btn btn-primary m-1">Search</button>
    <div id="btnClear" class="btn btn-secondary bg-dark text-danger m-1">Clear</div>
    
    <div style="width:50px;">
        <div id="searchLoader" class="spinner-border p-2 text-success float-right d-none" role="status" ></div>
    </div>
    
</div>

<hr />

<table class="table text-center text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
           @* if ( item.Quantity > 0 ) *@
            { 
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Price)$
                    </td>
                    <td class="align-middle">
                        @if( item.Image != null)
                        {
                        string img = Convert.ToBase64String(item.Image);
                        <img src="data:image/png;base64,@img" style="height:100px; width:100px; border-radius:100px" />
                        }
                        else
                        {
                        <span class="text-danger">No image yet.</span>
                        }
                    </td>
                    <td class="align-middle">
                        <a class="text-light" asp-action="Details" asp-route-id="@item.Id">ABOUT</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<script type="text/template" id="rowTemplate">

<tr>
    <td>
        ${name}
    </td>
    <td>
        ${brand}
    </td>
    <td>
        ${image}
    </td>
    <td>
        ${description}
    </td>
    <td>
        ${price}$
    </td>
    <td>
        <a href="/Instruments/Details/${id}">ABOUT</a>
    </td>
</tr>
</script>

@section Scripts{
<script src="~/js/Instruments/Search.js"></script>
}
