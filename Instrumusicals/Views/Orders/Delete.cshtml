@model Instrumusicals.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<div class="row text-center justify-content-center">
    <h2>Delete @Model.User.FirstName's Order</h2>
    <h5>Are you sure you want to delete this order?</h5>
    <a asp-action="Index" class="text-secondary">All Orders</a>
</div>

<hr />

<div class="row text-center justify-content-center">
    <div class="row">
        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-info">Order Owner   </th>
                    <th class="text-info">Order Date    </th>
                    <th class="text-info">Shipping Date </th>
                    <th class="text-info">Instruments   </th>
                    <th class="text-info">Address       </th>
                    <th class="text-info">Total Price   </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td>@Model.User.FirstName @Model.User.LastName</td>
                    <td>@Model.Create</td>
                    <td>@Model.Shipping</td>
                    <td>
                        @if (Model.Instruments.Count() < 1)
                        {
                            <span>No Instruments in this order</span>
                        }
                        else
                        {@Model.Instruments.Count() }
                                    </td>
                    <td>Address       </td>
                    <td>Total Price   </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn text-danger border border-danger w-25" style="border-radius:100px;" />
    </form>
</div>
