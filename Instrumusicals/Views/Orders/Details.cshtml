@model Instrumusicals.Models.Order

@{
    ViewData["Title"] = "Details";
}

<div id="header" class="row justify-content-center text-center">
    <div class="w-50">
        <h2>All About @Model.User.FirstName's Order</h2>

        <a class="text-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        @if(Context.User != null && Context.User.IsInRole("Admin"))
        {            
            <span> | </span>
            <a class="text-primary" asp-action="Index" >All Orders</a>
            <span> | </span>
            <a class="text-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
        <br />
        <a class="text-secondary" asp-action="Index" asp-controller="Home">Homepage</a>
    </div>
</div>
<div class="row text-center justify-content-center m-2">
    <div class="w-75">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle text-primary" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
