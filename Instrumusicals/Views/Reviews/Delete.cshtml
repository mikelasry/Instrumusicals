@model Instrumusicals.Models.Review

@{
    ViewData["Title"] = "Delete";
}
<div class="row text-center justify-content-center">
    <h2><a class="text-light" asp-action="Details" asp-controller="Instruments" asp-route-id="@Model.Instrument.Id">@Model.Instrument.Name</a></h2>
    <h5>Are you sure you want to delete this review?</h5>
    @if (Context.User != null && Context.User.IsInRole("Admin"))
    {<a asp-action="Index" class="text-light">All Reviews</a><br />}
    <a class="text-secondary" asp-controller="Home" asp-action="Index">Homepage</a>

</div>

<hr />

<div class="row text-center justify-content-center">
    <div class="row">
        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-info">Reviewer</th>
                    <th class="text-info">@Html.DisplayNameFor(model => model.LastUpdate)</th>
                    <th class="text-info">@Html.DisplayNameFor(model => model.Content)</th>
                    <th class="text-info">@Html.DisplayNameFor(model => model.Created)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td>@Model.User.FirstName @Model.User.LastName</td>
                    <td>@Html.DisplayFor(model => model.LastUpdate)</td>
                    <td>@Html.DisplayFor(model => model.Content)</td>
                    <td>@Html.DisplayFor(model => model.Created)</td>
                    <td><a class="btn text-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn text-danger border border-danger m-5" style="border-radius:100px;" /> 
    </form>
</div>
