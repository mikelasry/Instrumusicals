@model IEnumerable<Instrumusicals.Models.User>

@{
    ViewData["Title"] = "Index";
}
<div class="row justify-content-center text-center">
    <div class="w-50">
        <h1>Instrumusicals Users</h1>
        <a class="text-primary" asp-action="Index" asp-controller="Home">Homepage</a> | 
        <a class="text-success" asp-action="Register">Register a New User</a>
        <hr />

    </div>
</div>




@if ( Model.Count() != 0 )
{
    <table class="table text-light text-center">
        <thead>
            <tr>
                <th class="text-info">Email</th>
                <th class="text-info">Name</th>
                <th class="text-info">Address</th>
                <th class="text-info">Orders</th>
                <th class="text-info">Reviews</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="">
                <td class="align-middle">@item.Email</td>
                <td class="align-middle">@item.FirstName @item.LastName</td>
                <td class="align-middle">@item.Address</td>
                <td class="align-middle">@item.Orders.Count()</td>
                <td class="align-middle">@item.Reviews.Count()</td>
                <td class="align-middle">
                    <a class="text-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>}
else
{
    <h5>No Users Yet</h5>
}
