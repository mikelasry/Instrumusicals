@model Instrumusicals.Models.Store

@{
    ViewData["Title"] = "Delete";
}
<div class="row text-center justify-content-center">
    <h2>@Model.Name</h2>
    <h5>Are you sure you want to delete this store?</h5>
    <a asp-action="Index" class="text-secondary">All Stores</a>
</div>

<hr />

<div class="row text-center justify-content-center">
    <div class="row">
        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-info">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-info">@Html.DisplayNameFor(model => model.Address)</th>
                    <th class="text-info">Exact location (Lat,Lng)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                    <td>@Html.DisplayFor(model => model.Lat) , @Html.DisplayFor(model => model.Lng)</td>
                    <td><a class="btn text-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm text-danger border border-danger w-25" style="border-radius:100px;" /> 
    </form>
</div>
