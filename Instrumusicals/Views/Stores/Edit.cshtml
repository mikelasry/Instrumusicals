@model Instrumusicals.Models.Store

@{
    ViewData["Title"] = "Edit";
}

<div class="row text-center text-light justify-content-center">
    <h4>Edit <a class="text-light" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h4>
    <a class="text-secondary" asp-action="Index">All Stores</a>
</div>
<hr />


<div class="row text-center justify-content-center">
    <div class="w-50">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-light m-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control text-light m-1 text-center bg-dark border border-primary" autocomplete="off" style="border-radius:100px;"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control text-light m-1 text-center bg-dark border border-primary" autocomplete="off" style="border-radius:100px;"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3">
                <label asp-for="Lat" class="control-label"></label>
                <input asp-for="Lat" class="form-control text-light m-1 text-center bg-dark border border-primary" autocomplete="off" style="border-radius:100px;"/>
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3">
                <label asp-for="Lng" class="control-label"></label>
                <input asp-for="Lng" class="form-control text-light m-1 text-center bg-dark border border-primary" autocomplete="off" style="border-radius:100px;"/>
                <span asp-validation-for="Lng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn text-success border border-success m-4" style="border-radius:100px;"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
