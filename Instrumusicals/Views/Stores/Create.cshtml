@model Instrumusicals.Models.Store

@{
    ViewData["Title"] = "Stores";
}

<div class="row text-center justify-content-center">
    <div class="w-50">
        <h4>Create a new Store</h4>
        <a asp-action="Index" class="text-secondary">All Stores</a>
    </div>
</div>
<hr />
<div class="row text-center justify-content-center">
    <div class="w-50">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-light m-3 d-flex justify-content-center">
                <input asp-for="Name" class="form-control text-center bg-dark text-light border border-primary w-50" autocomplete="off" placeholder="Name" style="border-radius:100px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3 d-flex justify-content-center">
                <input asp-for="Address" class="form-control text-center bg-dark text-light border border-primary w-50" autocomplete="off" placeholder="Address" style="border-radius:100px;" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3 d-flex justify-content-center">
                <input asp-for="Lat" class="form-control text-center bg-dark text-light border border-primary w-50" autocomplete="off" placeholder="Latitude" style="border-radius:100px;"/>
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-3 d-flex justify-content-center">
                <input asp-for="Lng" class="form-control text-center bg-dark text-light border border-primary w-50" autocomplete="off" placeholder="Longitude" style="border-radius:100px;"/>
                <span asp-validation-for="Lng" class="text-danger"></span>
            </div>
            <div class="form-group text-light m-5 text-center bg-dark text-light ">
                <input type="submit" value="Create" class="btn text-success border border-success" autocomplete="off" style="border-radius:100px;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
