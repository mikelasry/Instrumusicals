@model Instrumusicals.Models.Store

@{
    ViewData["Title"] = "Details";
}
<div class="row text-center text-light justify-content-center">
    <div class="w-50">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <a class="text-secondary" asp-action="Index">All Stores</a>
        <hr />
    </div>
</div>
<div class="row text-center text-light justify-content-center">
    <div class="w-75">
        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.Lat)</th>
                    <th>@Html.DisplayNameFor(model => model.Lng)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>                    
                    <td>@Html.DisplayFor(model => model.Address)</td>
                    <td>@Html.DisplayFor(model => model.Lat)</td>
                    <td>@Html.DisplayFor(model => model.Lng)</td>
                    <td>
                        <a class="text-warning" asp-action="Edit"  asp-route-id="@Model.Id" >Edit</a> |
                        <a class="text-danger" asp-action="Delete" asp-route-id="@Model.Id" >Delete</a>
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
