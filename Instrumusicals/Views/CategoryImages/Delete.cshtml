@model Instrumusicals.Models.CategoryImage

@{
    ViewData["Title"] = "Delete";
}

<div class="row text-center text-light justify-content-center">
    <div class="w-50">
        <h2><cite><a class="text-light" asp-action="Details" asp-controller="Categories" asp-route-id="@Model.Id">@Model.Category.Name</a> Category Image</cite></h2>
        <h5>Are you sure you want to delete this category image?</h5>
        <a class="text-secondary" asp-action="Index">All Category Images</a>
        <hr />
    </div>
</div>

<div class="row text-center text-light justify-content-center">
    <div class="w-75">
        @if (Model.Image != null)
        {
            string img = Convert.ToBase64String(Model.Image);
            <img src="data:img/png;base64,@img" class="w-25" style="border-radius:30px" />
        }
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm text-danger border border-danger w-25 m-3" style="border-radius:100px;" />
    </form>
</div>

