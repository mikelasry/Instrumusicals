@model IEnumerable<Instrumusicals.Models.CategoryImage>

@{
    ViewData["Title"] = "Index";
}

<div class="row text-center justify-content-center">
    <div class="w-50">
        <h1>Instrumusicals' Categories</h1>
        <a class="text-light" asp-action="Inndex"> All Category Images</a>  
        <br />
        <a class="btn border border-success text-success m-3" asp-action="Create" style="border-radius:100px;">New</a>  
        <br />         
        <a class="text-secondary" asp-action="Create" asp-controller="Categories"> All Categories</a> | 
        <a class="text-secondary" asp-action="Index" asp-controller="Home"> Homepage</a>
    </div>
</div>
<div class="row">
    @foreach (CategoryImage ci in Model)
    {
        <div class="card m-2 bg-dark border border-primary col col-md-5 col-lg-6" style="width: 18rem; border-radius:15px;">
            <div class="card-body bg-dark text-center">
                <div id="header" class="d-flex text-center justify-content-center">
                    <h5 class="card-title text-info">
                        <cite>
                            <a class=" text-info" asp-action="Details" asp-route-id="@ci.Id">@ci.Category.Name</a>
                            Image
                        </cite>
                    </h5>
                </div>
            </div>
            @if (ci.Image != null)
            {
                string img = Convert.ToBase64String(ci.Image);
                <img src="data:image/png;base64,@img" class="m-1" style="border-radius:25px;" />
            }
            else
            { <div class="d-flex justify-content-center"><span class="text-danger m-2"> No Available Image</span></div>}
            <div id="footer" class="row text-center justify-content-center m-2">
                <div>

                    <a asp-action="Edit" asp-route-id="@ci.Id" class="text-warning">Edit</a>
                    <span> | </span>
                    <a asp-action="Delete" asp-route-id="@ci.Id" class="text-danger">Delete</a>
                </div>
            </div>

        </div>
    }
</div>


