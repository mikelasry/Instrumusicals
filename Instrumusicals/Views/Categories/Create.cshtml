@model Instrumusicals.Models.Category

@{
    ViewData["Title"] = "Create";
}
<div class="row justify-content-center">
    <div class="w-50 text-center">
        <h4>Create a new Category</h4>
        <div>
            <a class="text-secondary" asp-action="Index">All Categories</a>
        </div>
        <hr />
    </div>
    <div class="row justify-content-center">
        <div class="w-50">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Name" class="form-control bg-dark text-light text-center" placeholder="Enter new Category Name" autocomplete="off" style="border-radius:100px;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-center">
                    <input type="submit" value="Create" class="btn border border-primary text-primary m-3 w-25" style="border-radius:100px;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
