@model Instrumusicals.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="row text-center text-light justify-content-center">
    <div class="w-50">
        <h2><cite><a class="text-light" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></cite></h2>
        <h5>Are you sure you want to delete this category?</h5>
        <a class="text-secondary" asp-action="Index">All Categories</a>
        <hr />
    </div>
</div>
<div class="row text-center text-light justify-content-center">
    <div class="w-75">
        <table class="table text-center text-light">
            <thead>
                <tr class="text-info">
                    <th>@nameof(Model.Name)</th>
                    <th>@(Model.Instruments==null?"No Instruments":nameof(Model.Instruments))</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                    <td>@(Model.Instruments == null ? "-" : Model.Instruments.Count())</td>
                    <td>
                        <a class="text-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm text-danger border border-danger w-25" style="border-radius:100px;" />
    </form>
</div>
