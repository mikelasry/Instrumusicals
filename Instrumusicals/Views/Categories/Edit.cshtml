@model Instrumusicals.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit @Model.Name Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.CategoryImage.Image != null)
                {
                    string img = Convert.ToBase64String(Model.CategoryImage.Image);
                    <img src="data:image/png;base64,@img" width="100"/>
                }<br/>
                <a asp-action="Edit" asp-controller="CategoryImages" asp-route-id="@Model.CategoryImage.Id">Change Image</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
