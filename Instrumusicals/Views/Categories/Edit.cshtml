@model Instrumusicals.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center"><h4>Edit <a class="text-light" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a> Category</h4></div>
<div class="d-flex justify-content-center">
    <a class="text-info" asp-action="Index">All Categories</a> &nbsp; | &nbsp;
    <a class="text-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete @Model.Name</a>
</div>
<div class="row justify-content-center text-center">
    <div class="w-50">
        <hr />
        @if (Model.CategoryImage != null && Model.CategoryImage.Image != null)
        {
            string img = Convert.ToBase64String(Model.CategoryImage.Image);
            <img class=" m-2" src="data:image/png;base64,@img" style="border-radius:100px;   width:500px;" />
            <a class="w-50 text-warning" asp-action="Edit" asp-controller="CategoryImages" asp-route-id="@Model.CategoryImage.Id">Change Image</a>
        }
        else
        { <div class="d-flex justify-content-center"><span class="text-danger m-2"> No Available Image</span></div>}
        <br/>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group d-flex justify-content-center">
                <input asp-for="Name" class="form-control bg-dark text-white text-center w-50 m-3" style="border-radius:100px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn text-primary border border-primary" style="border-radius:100px;"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
